@{
    ViewData["Title"] = "Expenses";
}

@model List<SpendSmart.Models.Expense>

<div class="text-center mb-4">
    <h1 class="display-4">Expenses</h1>
    <h4 class="mt-3">Total Expenses: <strong>$@ViewBag.TotalExpenses</strong></h4>
    <a asp-action="CreateEditExpenseForm" class="btn btn-success mt-3">Add New Expense</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Value ($)</th>
            <th>Description</th>
            <th>User</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Id</td>
                    <td>@expense.Value.ToString("0.00")</td>
                    <td>@expense.Description</td>
                    <td>@expense.User?.Name</td>
                    <td>
                        <a asp-action="CreateEditExpenseForm" asp-route-id="@expense.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="DeleteExpense" asp-route-id="@expense.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this expense?');">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No expenses found.</td>
            </tr>
        }
    </tbody>
</table>
