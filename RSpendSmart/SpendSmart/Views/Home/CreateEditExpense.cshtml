@{
    ViewData["Title"] = "Create / Edit Expense";
}

@model SpendSmart.Models.Expense

<div class="text-center mb-4">
    <h1 class="display-4">Create or Edit an Expense</h1>
</div>

<form asp-action="CreateEditExpense" asp-controller="Home" method="post">
    <div class="form-group mb-3">
        <label asp-for="UserId" class="form-label">Select a User:</label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
            <option value="0">-- Select User --</option>
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="Value" class="form-label">Value ($)</label>
        <input asp-for="Value" class="form-control" type="number" step="0.01" placeholder="0.00" />
        <span asp-validation-for="Value" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <input asp-for="Description" class="form-control" type="text" placeholder="Add a description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Expenses" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
