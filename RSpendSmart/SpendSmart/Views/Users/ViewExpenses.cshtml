@model List<SpendSmart.Models.Expense>

@{
    ViewData["Title"] = "User Expenses";
}

<div class="text-center">
    <h2>@ViewBag.UserName’s Expenses</h2>
    <p><strong>Total:</strong> ₦@ViewBag.TotalExpenses</p>

    <a class="btn btn-secondary mb-3" asp-action="Index">← Back to Users</a>

    @if (Model.Count == 0)
    {
        <p>No expenses recorded for this user yet.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Value</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td>@expense.Id</td>
                        <td>@expense.Value</td>
                        <td>@expense.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
