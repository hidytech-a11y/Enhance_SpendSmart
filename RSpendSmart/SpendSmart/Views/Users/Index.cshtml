@model List<SpendSmart.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
    <p>
        <a class="btn btn-primary" asp-action="CreateEditUser">+ Add User</a>
    </p>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Address</th>
                <th>Profession</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Age</td>
                    <td>@user.Address</td>
                    <td>@user.Profession</td>
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="ViewExpenses" asp-route-id="@user.UserId">View Expenses</a>
                        <a class="btn btn-sm btn-warning" asp-action="CreateEditUser" asp-route-id="@user.UserId">Edit</a>
                        <a class="btn btn-sm btn-danger" asp-action="DeleteUser" asp-route-id="@user.UserId"
                           onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
